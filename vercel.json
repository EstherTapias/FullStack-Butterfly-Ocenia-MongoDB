{
    "version": 2,
    "builds": [
      {
        "src": "Backend/app.js",
        "use": "@vercel/node"
      },
      {
        "src": "Frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      {
        "src": "/butterflies(.*)",
        "dest": "Backend/app.js"
      },
      {
        "src": "/api/(.*)",
        "dest": "Backend/app.js"
      },
      {
        "src": "/(.*)",
        "dest": "Frontend/dist/$1"
      }
    ],
    "functions": {
      "Backend/app.js": {
        "maxDuration": 30
      }
    }
  }